<?xml version="1.0" encoding="UTF-8"?>
<configuration>
    
    <!-- Define the secure message converter -->
    <conversionRule conversionWord="secureMsg" 
                    class="github.sfx.sprint_flight.config.SecureMessageConverter" />
    
    <!-- Console appender with secure logging -->
    <appender name="CONSOLE" class="ch.qos.logback.core.ConsoleAppender">
        <encoder>
            <pattern>%d{yyyy-MM-dd HH:mm:ss.SSS} %5level --- [%15.15thread] %-40.40logger{39} : %secureMsg%n</pattern>
        </encoder>
    </appender>
    
    <!-- File appender with secure logging -->
    <appender name="FILE" class="ch.qos.logback.core.rolling.RollingFileAppender">
        <file>logs/sprint-flight.log</file>
        <encoder>
            <pattern>%d{yyyy-MM-dd HH:mm:ss.SSS} %5level --- [%15.15thread] %-40.40logger{39} : %secureMsg%n</pattern>
        </encoder>
        <rollingPolicy class="ch.qos.logback.core.rolling.SizeAndTimeBasedRollingPolicy">
            <fileNamePattern>logs/sprint-flight.%d{yyyy-MM-dd}.%i.log</fileNamePattern>
            <maxFileSize>10MB</maxFileSize>
            <maxHistory>30</maxHistory>
            <totalSizeCap>100MB</totalSizeCap>
        </rollingPolicy>
    </appender>
    
    <!-- Suppress verbose HTTP client logging that might leak URLs with API keys -->
    <logger name="org.springframework.web.reactive.function.client" level="ERROR" />
    <logger name="reactor.netty.http.client" level="ERROR" />
    <logger name="io.netty" level="ERROR" />
    
    <!-- Application logging -->
    <logger name="github.sfx.sprint_flight" level="DEBUG" />
    
    <!-- Root logger -->
    <root level="INFO">
        <appender-ref ref="CONSOLE" />
        <appender-ref ref="FILE" />
    </root>
    
</configuration>
